{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jalankan Server PHP (Built-in)",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "${workspaceFolder}"
            ],
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s"
            }
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        }
    ]
}